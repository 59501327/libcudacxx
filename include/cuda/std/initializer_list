#ifndef _CUDA_INITIALIZER_LIST
#define _CUDA_INITIALIZER_LIST

#ifndef __CUDACC_RTC__
#include <initializer_list>
#endif // __CUDACC_RTC__

#include "detail/__config"

_LIBCPP_BEGIN_NAMESPACE_STD

    template<class _Tp>
    using initializer_list = ::std::initializer_list<_Tp>;

    template<class _Tp> __host__ __device__ inline constexpr const _Tp* begin(initializer_list<_Tp> __il) noexcept {
        return ::std::begin(__il); }
    template<class _Tp> __host__ __device__ inline constexpr const _Tp* end(initializer_list<_Tp> __il) noexcept {
        return ::std::end(__il); }

_LIBCPP_END_NAMESPACE_STD

#endif //_CUDA_INITIALIZER_LIST
