#ifndef _CUDA_LATCH
#define _CUDA_LATCH

#include "atomic"

#include "../details/__config"

#include "../../libcxx/include/latch"

_LIBCPP_BEGIN_NAMESPACE_CUDA

template<thread_scope _Sco>
class latch : public std::__latch_base<_Sco> {
public:
    _LIBCPP_INLINE_VISIBILITY
    latch(std::ptrdiff_t __count)
        : std::__latch_base<_Sco>(__count) {
    }
};

_LIBCPP_END_NAMESPACE_CUDA

#endif //_CUDA_LATCH
